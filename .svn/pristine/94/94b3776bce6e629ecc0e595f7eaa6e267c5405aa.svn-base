@media (min-width: 798px) {
  .marketing-container {
    width: 100%;
    /*
      position: absolute;
      top: 411px;
      left: 0;*/
    .city_page_category {
      padding-bottom: 0;
      padding-left: 0;
      padding-right: 0;
      margin-bottom: 0;
      margin-top: 2%;
      .city_page_category_detail {
        padding-bottom: 1%;
        padding-top: 1%;
        padding-left: 0.5%;
        padding-right: 0.5%;
        width: 20%;
        float: left;
      }
    }
    .v3-beta-front-page-header {
      text-align: left;
      margin-left: 0.5%;
      font-size: 1.8rem;
      margin-top: 15px;
      color: #390c20;
      width: 100%;
      .pantry-brown-title {
        font-size: 3rem;
        padding-top: 10px;
        padding-bottom: 10px;
        color: #390c20;
      }
    }
    .city_page_popular {
      padding-left: 10px;
      padding-right: 10px;
      margin-top: 0;
      .city_page_popular_detail {
        padding-top: 1%;
        padding-left: 0.5%;
        padding-right: 0.5%;
        margin-bottom: 1%;
      }
    }
  }
}
.city-popular-pc-font {
  font-size: 1.7rem !important;
}
.city-popular-font {
  color: #390c20;
  font-size: 1.2rem;
  float: left;
  padding-left: 0;
  padding-right: 0;
  text-align: left;
}
.city-popular-chart-font {
  color: #97c121;
  font-size: 1.2rem;
  float: right;
  padding-left: 0;
  padding-right: 0;
  text-align: right;
  cursor: pointer;
}
.city-popular-size-font-pc {
  font-size: 1.6rem !important;
}
.city-popular-size-font {
  color: #b8b7b7;
  font-size: 1.08rem;
  float: left;
  padding-left: 0;
  padding-right: 0;
  text-align: left;
}
.img-responsive {
  display: block;
  width: 100%;
  height: auto;
}
img {
  vertical-align: middle;
}
.padding-0px {
  padding: 0px;
}
@media (max-width: 797px){
  .marketing-container {
    width: 100%;
    .city_page_category_mb {
      margin-top: 15px;
      .city_page_category_detail {
        width: 20%;
        display: inline-block;
        padding-bottom: 1%;
        padding-top: 1%;
        padding-left: 0.5%;
        padding-right: 0.5%;
        float: left;
        .cate_img_content {
          padding: 10%;
          display: inline-block;
          img {
            border-radius: 50%;
          }
        }
        .cate_content {
          font-size: 12px;
          color: #390c20;
          height: 19px;
          overflow: hidden;
          width: 100%;
          vertical-align: middle;
          display: inline-block;
        }
      }
    }
    .city_page_popular_detail_m {
      padding: 0.6%;
      margin-top: 1%;
      margin-bottom: 1%;
    }
    .city_page_bottom_detail_mb {
      margin-top: 5px;
    }
  }
}
#cities-list-other-cities{
  .newCities-production-slideshows {
    margin-bottom: 10px;
    display: inline-block;
    cursor: pointer;
    width: 100%;
  }
  .image {
    width: 100%;
  }
}
.city_page_bottom {
  padding-bottom: 0;
  padding-left: 0;
  padding-right: 0;
  margin-top: 0;
  .city_page_bottom_detail {
    padding-left: 0.5%;
    padding-right: 0.5%;
    margin: 0;
    margin-top: 10px;
  }
}
.font-footer-icon {
  text-align: center;
  margin-top: 30px;
  color: #390c20;
  font-size: 14px;
  img {
    max-width: 100%;
    height: auto;
    display: inline-block;
    padding: 5%;
  }
}